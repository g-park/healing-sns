<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp" >

        <FrameLayout
            android:id="@+id/framelayoutLeft"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/tab1_balloom_list_01" >

            <TextView
                android:id="@+id/textViewAMPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="오전"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayoutTime"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tab1_balloom_list_02" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="월화수목금토일"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayoutSound"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/tab1_balloom_list_03" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageViewSound"
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:background="@drawable/sound" />

                <ImageView
                    android:id="@+id/imageViewVib"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/vibration" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayoutOnOff"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/tab1_balloom_list_05"
            android:clickable="false" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/imageViewBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bar" />

                <ToggleButton
                    android:id="@+id/toggleButtonListONOFF"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_toggle_alarm_on_off"
                    android:focusable="false"
                    android:textOff=" "
                    android:textOn=" " />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayoutRight"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/tab1_balloom_list_06"
            android:clickable="false" >
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/x_btn"
         />
</FrameLayout>